<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles.css">
        <link href="https://fonts.googleapis.com/css?family=Dancing+Script|Montserrat|Pacifico|Quicksand" rel="stylesheet">
        <title>Clients</title>
    </head>
    <body>
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% if clients is not empty %}
                    {% for client in clients %}
                    <div class="page-header">
                        <h1>Client List</h1>
                    </div>
                    <div class="page-header">
                        <h3>{{ client.getName }}</h3>
                        <p><a href='/clients/{{ client.getId }}/edit'>Edit this client</a></p>
                    </div>
                    {% endfor %}
                    {% else %}
                    <p>There are no clients in the database.</p>
                    {% endif %}

                    <p><a href='/'>Home</a></p>
                    <p><a href='/stylists'>See stylist list</a></p>
                    <p><a href='/add_stylist'>Add a stylist</a></p>
                </div>
            </div>
        </div>
    </body>
</html>
